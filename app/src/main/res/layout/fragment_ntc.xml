<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ntcRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.NTC">

    <!--**********************For TopUp**********************-->
    <LinearLayout
        android:id="@+id/ntcMainLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ntcRechargeLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_ripple_borederless"
            android:clickable="true"
            android:onClick="btn_clicked"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rechargeView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="2.5dp"
                android:layout_weight="0.19"
                android:background="@color/ntc1"
                android:gravity="fill"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/rechargecard" />

            <TextView
                android:id="@+id/rechargeButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2.5dp"
                android:layout_weight="0.93"
                android:background="@drawable/ntcborder1"
                android:gravity="fill"
                android:text="TopUp\nBalance"
                android:textAlignment="center"
                android:textColor="@color/ntc1"
                android:textSize="26sp" />


        </LinearLayout>

        <!--**********************For Balance Enquiry**********************-->
        <LinearLayout
            android:id="@+id/ntcBalanceLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_ripple_borederless"
            android:clickable="true"
            android:onClick="btn_clicked"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/balanceView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="2.5dp"
                android:layout_weight="0.19"
                android:background="@color/ntc2"
                android:gravity="fill"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/balanceinquiry" />

            <TextView
                android:id="@+id/balanceButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2.5dp"
                android:layout_weight="0.93"
                android:background="@drawable/ntcborder2"
                android:gravity="fill"
                android:text="Balance\nEnquiry"
                android:textAlignment="center"
                android:textColor="@color/ntc2"
                android:textSize="26sp" />

        </LinearLayout>

        <!--**********************For Balance Enquiry**********************-->
        <LinearLayout
            android:id="@+id/ntcBalanceTransferLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/custom_ripple_borederless"
            android:clickable="true"
            android:onClick="btn_clicked"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/balanceTransferView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="2.5dp"
                android:layout_weight="0.19"
                android:background="@color/ntc1"
                android:gravity="fill"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/balancetransfer" />

            <!--android:background="@color/colorButton1"-->

            <TextView
                android:id="@+id/balanceTransferButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2.5dp"
                android:layout_weight="0.93"
                android:background="@drawable/ntcborder1"
                android:gravity="fill"
                android:text="Balance\nTransfer"
                android:textAlignment="center"
                android:textColor="@color/ntc1"
                android:textSize="26sp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>